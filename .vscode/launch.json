{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debuguj aplikację CUDA",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/main",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/cuda-gdb",
            "setupCommands": [
                {
                    "description": "Włącz pretty-printing dla cuda-gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
